doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Scoped CSS Variables and JS
    link(rel='stylesheet', type='text/css', href='/stylesheets/jscamp/cssVariables.css')
  body
    h2
      | Update CSS Variables with 
      span.hl JS
    .controls
      label(for='spacing') Spacing:
      input#spacing(type='range', name='spacing', min='10', max='200', value='10', data-sizing='px')
      label(for='blur') Blur:
      input#blur(type='range', name='blur', min='0', max='25', value='10', data-sizing='px')
      label(for='base') Base Color
      input#base(type='color', name='base', value='#ffc600')
    img(src='https://source.unsplash.com/7bwQXzbF6KE/800x500')
    script(type='text/javascript', src='/javascripts/jscamp/cssVariables.js')
